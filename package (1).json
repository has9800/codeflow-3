{
  "name": "codeflow-cli",
  "version": "1.0.0-beta",
  "description": "AI coding assistant with 40-70% token savings via graph-based retrieval",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "codeflow": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.tsx",
    "build": "tsup src/index.tsx --format esm --dts --clean",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:neo4j": "vitest run tests/integration/neo4j-smoke.test.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "benchmark": "tsx scripts/benchmark.ts"
  },
  "dependencies": {
    "ink": "4.4.1",
    "ink-text-input": "5.0.1",
    "react": "^18.2.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.20",
    "@xenova/transformers": "^2.17.0",
    "diff": "^5.2.0",
    "simple-git": "^3.22.0",
    "conf": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "execa": "^8.0.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "neo4j-driver": "^5.20.0",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/node": "^20.11.0",
    "@types/diff": "^5.0.9",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "tsup": "^8.0.1",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "@types/inquirer": "^9.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
